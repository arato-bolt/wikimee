---
// Hero FINAL - Copy CRO focada em decisores de agências
// Dor: diversas ferramentas / Solução: uma plataforma
// Badge com avatares estilo ManyRequests

const pills = [
  'Portal do Cliente',
  'Projetos', 
  'Cronogramas',
  'Aprovações',
  'Kanban',
  'White-label'
];
---

<section class="relative min-h-screen bg-[#0f0d1a] overflow-hidden">
  
  <!-- Gradiente radial sutil -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(139,92,246,0.12),transparent)]"></div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-[80rem] mx-auto px-[1rem] md:px-[1.5rem] pt-[6rem] md:pt-[7rem] pb-[6rem]">
    
    <div class="text-center">
      
      <!-- Badge com avatares (estilo ManyRequests) -->
      <div class="inline-flex items-center gap-[0.75rem] mb-[2rem] px-[1rem] py-[0.5rem] bg-white/5 rounded-full border border-white/10 animate-fade-in">
        <!-- Avatares sobrepostos -->
        <div class="flex -space-x-2">
          <img src="/testimonial-bruno.png" alt="" class="w-[2rem] h-[2rem] rounded-full border-2 border-[#0f0d1a] object-cover"/>
          <img src="/testimonial-pollyanna.png" alt="" class="w-[2rem] h-[2rem] rounded-full border-2 border-[#0f0d1a] object-cover"/>
          <img src="/testimonial-danilo.png" alt="" class="w-[2rem] h-[2rem] rounded-full border-2 border-[#0f0d1a] object-cover"/>
        </div>
        <span class="text-[0.875rem] text-white/80">
          Usado por <span class="text-white font-medium">+500 donos de agências</span>
        </span>
      </div>
      
      <!-- Headline CRO - Foco na dor -->
      <h1 class="text-[2rem] sm:text-[3.5rem] lg:text-[4rem] font-bold text-white leading-[1.1] tracking-tight mb-[1.25rem] animate-fade-in animation-delay-100 mx-auto">
        Chega de 5 ferramentas <br class="block sm:hidden"/>
        <span class="bg-gradient-to-r from-violet-400 to-purple-300 bg-clip-text text-transparent inline">para gerenciar sua agência</span>
      </h1>
      
      <!-- Subheadline CRO - Solução clara -->
      <p class="text-[1.125rem] sm:text-[1.25rem] text-white/70 mb-[1.5rem] max-w-[36rem] mx-auto leading-relaxed animate-fade-in animation-delay-200">
        Portal do cliente, projetos, aprovações, cronogramas e drive — 
        <span class="text-white">tudo em uma única plataforma</span> feita para agências.
      </p>
      
      <!-- Pills clicáveis -->
      <div class="flex flex-wrap justify-center gap-[0.5rem] mb-[1.5rem] animate-fade-in animation-delay-300">
        {pills.map((pill) => (
          <span class="px-[0.875rem] py-[0.375rem] bg-white/5 border border-white/10 rounded-full text-[0.8125rem] text-white/70">
            {pill}
          </span>
        ))}
      </div>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row justify-center items-center gap-[0.75rem] mb-[2rem] animate-fade-in animation-delay-400">
        <button 
          onclick="openModal()"
          class="px-[2rem] py-[0.875rem] bg-[#6D28D9] hover:bg-[#5B21B6] text-white font-semibold rounded-full transition-all duration-200 cursor-pointer text-[1rem]"
        >
          Testar grátis
        </button>
        <a href="#pricing" class="px-[1.5rem] py-[0.875rem] text-white/70 hover:text-white font-medium transition-colors text-[1rem] flex items-center gap-[0.375rem]">
          Ver planos
          <svg class="w-[1rem] h-[1rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </a>
      </div>
    
    <!-- Mockup com VÍDEO -->
    <div class="hero-mockup max-w-[65rem] mx-auto animate-fade-in animation-delay-500">
      
      <div class="rounded-[1rem] overflow-hidden border border-white/10 bg-white shadow-2xl">
        
        <!-- Browser bar -->
        <div class="flex items-center gap-[0.5rem] px-[1rem] py-[0.625rem] bg-[#F5F5F5] border-b border-[#E5E5E5]">
          <div class="flex gap-[0.5rem]">
            <div class="w-[0.75rem] h-[0.75rem] rounded-full bg-[#ff5f57]"></div>
            <div class="w-[0.75rem] h-[0.75rem] rounded-full bg-[#febc2e]"></div>
            <div class="w-[0.75rem] h-[0.75rem] rounded-full bg-[#28c840]"></div>
          </div>
          <div class="flex-1 mx-[2rem]">
            <div class="max-w-[15rem] mx-auto px-[1rem] py-[0.375rem] bg-white rounded-[0.375rem] text-[0.8125rem] text-[#737373] text-center border border-[#E5E5E5]">
              app.wikimee.com
            </div>
          </div>
        </div>
        
        <!-- Vídeo -->
        <div style="padding:56.25% 0 0 0;position:relative; background: white;">
          <iframe 
            src="https://player.vimeo.com/video/919270719?badge=0&autopause=0&player_id=0&app_id=58479&background=1" 
            frameborder="0" 
            allow="autoplay; fullscreen; picture-in-picture" 
            style="position:absolute;top:0;left:0;width:100%;height:100%;" 
            title="Wikimee Dashboard"
            loading="lazy"
          ></iframe>
        </div>
      </div>
      
    </div>
    
  </div>
  

</section>

<!-- Animations CSS -->
<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(1rem); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }
  
  .animation-delay-100 { animation-delay: 0.1s; }
  .animation-delay-200 { animation-delay: 0.2s; }
  .animation-delay-300 { animation-delay: 0.3s; }
  .animation-delay-400 { animation-delay: 0.4s; }
  .animation-delay-500 { animation-delay: 0.5s; }
</style>
