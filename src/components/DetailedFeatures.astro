---
// Detailed Features - Grid inspirado em ManyRequests
const features = [
  {
    icon: 'portal',
    title: 'Portal do Cliente',
    description: 'Seu cliente aprova demandas em um ambiente exclusivo com a sua marca.'
  },
  {
    icon: 'whitelabel',
    title: 'White-label',
    description: 'Personalize tudo: domínio, cores, logos e e-mails. O Wikimee fica invisível.'
  },
  {
    icon: 'workspaces',
    title: 'Workspaces',
    description: 'Ambientes digitais flexíveis para organizar times, squads ou clientes separadamente.'
  },
  {
    icon: 'timeline',
    title: 'Cronogramas',
    description: 'Timeline visual para acompanhar prazos e gargalos. Zero surpresas na entrega.'
  },
  {
    icon: 'versioning',
    title: 'Versionamento',
    description: 'Controle de versão de arquivos automático. Nunca mais perca o "Final_V2_AgoraVai.psd".'
  },
  {
    icon: 'kanban',
    title: 'Kanban',
    description: 'Fluxos de trabalho visuais. Arraste e solte tarefas para mover demandas.'
  }
];
---

<section class="py-[6rem] bg-white border-b border-[#E5E5E5]">
  <div class="max-w-[75rem] mx-auto px-[1rem] md:px-[1.5rem] lg:px-[3rem]">
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-[3rem] gap-y-[4rem]">
      {features.map((feature) => (
        <div class="flex flex-col items-start group">
          
          <!-- Ícone SaaS Style: Clean, Borda Fina, Sombra Suave -->
          <div class="w-[3rem] h-[3rem] bg-white rounded-[0.5rem] border border-[#E5E5E5] flex items-center justify-center text-[#525252] shadow-sm mb-[1.25rem] group-hover:border-[#6D28D9] group-hover:text-[#6D28D9] group-hover:shadow-md group-hover:shadow-[#6D28D9]/10 transition-all duration-300">
            {feature.icon === 'portal' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
            )}
            {feature.icon === 'whitelabel' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/></svg>
            )}
            {feature.icon === 'workspaces' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
            )}
            {feature.icon === 'timeline' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            )}
            {feature.icon === 'versioning' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
            )}
            {feature.icon === 'kanban' && (
              <svg class="w-[1.5rem] h-[1.5rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/></svg>
            )}
          </div>
          
          <h3 class="text-[1.25rem] font-semibold text-[#0A0A0A] mb-[0.75rem]">
            {feature.title}
          </h3>
          
          <p class="text-[1rem] text-[#737373] leading-relaxed">
            {feature.description}
          </p>
          
        </div>
      ))}
    </div>
    
  </div>
</section>
