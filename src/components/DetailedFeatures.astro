---
// Detailed Features - Grid inspirado em ManyRequests com estilo Tech Glow
const features = [
  {
    icon: 'portal',
    title: 'Portal do Cliente',
    description: 'Seu cliente aprova demandas em um ambiente exclusivo com a sua marca.'
  },
  {
    icon: 'whitelabel',
    title: 'White-label',
    description: 'Personalize tudo: domínio, cores, logos e e-mails. O Wikimee fica invisível.'
  },
  {
    icon: 'workspaces',
    title: 'Workspaces',
    description: 'Ambientes digitais flexíveis para organizar times, squads ou clientes separadamente.'
  },
  {
    icon: 'communicator',
    title: 'Comunicador',
    description: 'Chat integrado direto na refação. Centralize conversas e elimine o ruído do WhatsApp.'
  },
  {
    icon: 'versioning',
    title: 'Versionamento',
    description: 'Controle de versão automático. Nunca mais perca o<br/>"Final_V2_AgoraVai.psd".'
  },
  {
    icon: 'kanban',
    title: 'Kanban',
    description: 'Fluxos de trabalho visuais. Arraste e solte tarefas para mover demandas.'
  }
];
---

<section class="py-[6rem] bg-white relative overflow-hidden text-center md:text-left">
  <!-- Tech Background Glow -->
  <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-purple-100/40 rounded-full blur-[100px] -z-10 translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-50/40 rounded-full blur-[100px] -z-10 -translate-x-1/2 translate-y-1/2"></div>

  <div class="max-w-[75rem] mx-auto px-[1rem] md:px-[1.5rem] lg:px-[3rem]">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-[2rem]">
      {features.map(feature => (
        <div class="group p-[2rem] rounded-[1.5rem] bg-white border border-[#E5E5E5] hover:border-[#6D28D9]/20 hover:shadow-2xl hover:shadow-purple-900/5 transition-all duration-300 relative overflow-hidden flex flex-col items-center md:items-start text-center md:text-left">
          
          <!-- Hover Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-purple-50/0 to-purple-50/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>

          <!-- Conteúdo -->
          <div class="relative z-10 w-full flex flex-col h-full items-center md:items-start">
             <div class="w-[3.5rem] h-[3.5rem] bg-[#FAFAFA] rounded-[0.75rem] border border-[#F5F5F5] flex items-center justify-center text-[#525252] shadow-sm mb-[1.5rem] group-hover:scale-110 group-hover:border-purple-200 group-hover:bg-purple-50 group-hover:text-[#6D28D9] group-hover:shadow-md transition-all duration-300">
            {feature.icon === 'portal' && (
              <svg class="w-[1.75rem] h-[1.75rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            )}
            {feature.icon === 'whitelabel' && (
              <svg class="w-[1.75rem] h-[1.75rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/></svg>
            )}
            {feature.icon === 'workspaces' && (
              <svg class="w-[1.75rem] h-[1.75rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
            )}
            {feature.icon === 'communicator' && (
              <svg class="w-[1.75rem] h-[1.75rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
            )}
            {feature.icon === 'versioning' && (
              <svg class="w-[1.75rem] h-[1.75rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            )}
            {feature.icon === 'kanban' && (
              <svg class="w-[1.75rem] h-[1.75rem]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/></svg>
            )}
          </div>
          
          <h3 class="text-[1.25rem] font-bold text-[#0A0A0A] mb-[0.75rem]">
            {feature.title}
          </h3>
          
          <p class="text-[1rem] text-[#737373] leading-relaxed" set:html={feature.description}></p>
          
          </div>
        </div>
      ))}
    </div>
    
  </div>
</section>
