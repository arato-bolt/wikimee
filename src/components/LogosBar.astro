---
// Logos Bar - MAIOR e mais visível
const clients = [
  { name: 'Client 1', logo: 'https://storage.googleapis.com/msgsndr/oFTw9DcsKRUj6xCiq4mb/media/696a5ba8eb2da7618bb33851.png' },
  { name: 'Client 2', logo: 'https://storage.googleapis.com/msgsndr/oFTw9DcsKRUj6xCiq4mb/media/696a5ba67b4d1e524f40f4ce.png' },
  { name: 'Client 3', logo: 'https://storage.googleapis.com/msgsndr/oFTw9DcsKRUj6xCiq4mb/media/696a5ba3eb2da72447b337be.png', invert: true },
  { name: 'Client 4', logo: 'https://storage.googleapis.com/msgsndr/oFTw9DcsKRUj6xCiq4mb/media/696a5be7b34b6443f80c8b84.png' },
  { name: 'Client 5', logo: 'https://storage.googleapis.com/msgsndr/oFTw9DcsKRUj6xCiq4mb/media/696a5b8bc7546a6e1e43a2a5.png' },

];
---

<section class="py-[2rem] md:py-[4rem] bg-white overflow-hidden">
  <div class="max-w-[80rem] mx-auto px-[1.5rem]">
    
    <p class="text-center text-[0.9375rem] text-[#737373] mb-[3rem]">
      Confiado por líderes de mercado
    </p>
    
    <div class="relative flex items-center overflow-hidden mask-gradient">
      <!-- Carrossel Wrapper -->
      <div class="flex items-center gap-[5rem] animate-infinite-scroll whitespace-nowrap">
        <!-- Logos Originais -->
        {clients.map((client) => (
          <img 
            src={client.logo} 
            alt={client.name}
            class={`h-[3rem] md:h-[4.5rem] w-auto object-contain grayscale opacity-80 hover:opacity-100 hover:grayscale-0 transition-all duration-300 mix-blend-multiply ${client.invert ? 'invert' : ''}`}
          />
        ))}
        <!-- Logos Duplicados para Loop Sem Costura -->
        {clients.map((client) => (
          <img 
            src={client.logo} 
            alt={client.name}
            class={`h-[3rem] md:h-[4.5rem] w-auto object-contain grayscale opacity-80 hover:opacity-100 hover:grayscale-0 transition-all duration-300 mix-blend-multiply ${client.invert ? 'invert' : ''}`}
          />
        ))}
        {clients.map((client) => (
          <img 
            src={client.logo} 
            alt={client.name}
            class={`h-[3rem] md:h-[4.5rem] w-auto object-contain grayscale opacity-80 hover:opacity-100 hover:grayscale-0 transition-all duration-300 mix-blend-multiply ${client.invert ? 'invert' : ''}`}
          />
        ))}
        {clients.map((client) => (
          <img 
            src={client.logo} 
            alt={client.name}
            class={`h-[3rem] md:h-[4.5rem] w-auto object-contain grayscale opacity-80 hover:opacity-100 hover:grayscale-0 transition-all duration-300 mix-blend-multiply ${client.invert ? 'invert' : ''}`}
          />
        ))}
      </div>
    </div>
    
  </div>
</section>

<style>
  .animate-infinite-scroll {
    animation: infinite-scroll 10s linear infinite;
  }
  
  @keyframes infinite-scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); } 
    /* Ajuste para loop perfeito com duplicata */
  }

  .mask-gradient {
    mask-image: linear-gradient(to right, transparent, black 20%, black 80%, transparent);
  }
</style>
