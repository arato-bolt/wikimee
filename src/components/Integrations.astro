---
// Integrations Section - "Orbital Tech"
// Design: Imagem SVG Orbital fornecida pelo cliente com animação de rotação e Headline Gradient
---

<section class="py-[6rem] bg-[#050505] relative overflow-hidden flex flex-col items-center justify-center min-h-[700px]">
  
  <!-- World Class Background System -->
  <div class="absolute inset-0 w-full h-full overflow-hidden pointer-events-none">
    
    <!-- 1. Noise Texture -->
    <div class="absolute inset-0 z-20 opacity-[0.035] mix-blend-overlay" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noiseFilter%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.8%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noiseFilter)%22/%3E%3C/svg%3E');"></div>

    <!-- 2. Mesh Aurora Gradients (Subtle Dark Mode) -->
    <div class="absolute top-0 left-0 w-full h-full z-0">
        <!-- Deep Blue Pulse -->
        <div class="absolute top-[20%] left-[50%] -translate-x-1/2 w-[60vw] h-[60vw] bg-[#1E3A8A] rounded-full mix-blend-screen filter blur-[120px] opacity-20 animate-aurora-slow"></div>
        <!-- Violet Accent -->
        <div class="absolute bottom-[0%] right-[20%] w-[40vw] h-[40vw] bg-[#5B21B6] rounded-full mix-blend-screen filter blur-[100px] opacity-15 animate-aurora-slower"></div>
    </div>
  </div>

  <div class="max-w-[75rem] mx-auto px-[1rem] relative z-20 w-full flex flex-col lg:flex-row items-center justify-between gap-12 lg:gap-24">
    
    <!-- Imagem Orbital Animada (Esquerda/Topo) -->
    <!-- Imagem/Orbital à Esquerda -->
    <div class="flex-1 w-full max-w-[500px] flex items-center justify-center relative order-2 lg:order-1 perspective-[1000px] group">
      
      <!-- Glow Behind -->
      <div class="absolute inset-0 bg-[#6D28D9] rounded-full filter blur-[80px] opacity-20 group-hover:opacity-40 transition-opacity duration-700"></div>

      <img 
        src="/integrations-orbital.svg" 
        alt="Integrações Wikimee" 
        class="w-full h-auto relative z-10 drop-shadow-[0_20px_50px_rgba(0,0,0,0.5)] transform transition-all duration-700 ease-out will-change-transform animate-float-3d hover:scale-105"
        style="transform-style: preserve-3d;"
      />
      
    </div>

    <!-- Texto à Direita -->
    <div class="flex-1 text-center lg:text-left max-w-[40rem] order-1 lg:order-2">
      <h2 class="text-[3rem] md:text-[3.5rem] lg:text-[4rem] font-bold text-white leading-[1.1] mb-[1.5rem] tracking-tight">
        Conecte suas <br class="hidden lg:block" />
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#A78BFA] to-[#6D28D9] animate-gradient-text">ferramentas favoritas</span>
      </h2>
      
      <p class="text-[1.125rem] text-[#A3A3A3] leading-relaxed mb-[2.5rem]">
        Centralize seu fluxo de trabalho. O Wikimee se integra nativamente com o ecossistema que sua agência já utiliza.
      </p>
      
      <button 
        onclick="openModal()" 
        class="inline-flex items-center gap-[0.5rem] bg-gradient-to-r from-[#7C3AED] to-[#DB2777] hover:brightness-110 text-white text-[1rem] font-bold px-[2rem] py-[1rem] rounded-full transition-all duration-300 shadow-[0_0_20px_rgba(124,58,237,0.4)] hover:shadow-[0_0_40px_rgba(124,58,237,0.6)] hover:-translate-y-1 cursor-pointer"
      >
        Agendar Demo
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
      </button>
    </div>
    
  </div>
</section>

<style>
  @keyframes spin-slowest {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.05); }
  }
  
  /* 3D Floating Animation - Subtle "breathing" in 3D space */
  @keyframes float-3d {
    0% { transform: rotateX(10deg) rotateY(-10deg) translateY(0px); }
    50% { transform: rotateX(15deg) rotateY(-5deg) translateY(-15px); }
    100% { transform: rotateX(10deg) rotateY(-10deg) translateY(0px); }
  }
  
  /* Acelerado para 60s conforme solicitado */
  .animate-spin-slowest { animation: spin-slowest 60s linear infinite; }
  .animate-pulse-slow { animation: pulse-slow 8s ease-in-out infinite; }
  .animate-float-3d { animation: float-3d 6s ease-in-out infinite; }

  /* Aurora Mesh Animations */
  @keyframes aurora-slow {
    0% { transform: translate(-50%, 0) scale(1); opacity: 0.2; }
    50% { transform: translate(-45%, 10%) scale(1.1); opacity: 0.3; }
    100% { transform: translate(-50%, 0) scale(1); opacity: 0.2; }
  }
  @keyframes aurora-slower {
    0% { transform: translate(0, 0) scale(1); opacity: 0.15; }
    50% { transform: translate(-10%, -10%) scale(1.2); opacity: 0.25; }
    100% { transform: translate(0, 0) scale(1); opacity: 0.15; }
  }

  .animate-aurora-slow { animation: aurora-slow 20s infinite alternate ease-in-out; }
  .animate-aurora-slower { animation: aurora-slower 25s infinite alternate ease-in-out; }
</style>
